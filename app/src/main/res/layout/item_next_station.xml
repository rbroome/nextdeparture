<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:background="@color/ColorPrimary">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/expand_station"
        android:background="@color/ColorPrimary">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_next_station_number_txt"
        android:background="#004b85"
        android:width="60dp"
        android:height="60dp"
        android:gravity="center"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_next_station_station_txt"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:text="GÃ¶teborg Chalmers"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_next_station_timeleft_txt"
            android:gravity="right|center_vertical"
            android:layout_marginRight="16dp"
            android:text="5 min"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/gray"/>
        </LinearLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="1000"
        app:el_expanded="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <broome.com.nastaavgang.nearbydeparture.impl.view.MyView
            android:id="@+id/youarehereview"
            android:layout_width="2000dp"
            android:layout_height="200dp" />
    </HorizontalScrollView>

    </net.cachapa.expandablelayout.ExpandableLayout>


</LinearLayout>